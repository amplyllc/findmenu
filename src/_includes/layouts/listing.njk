---
layout: 'layouts/base.njk'
type: interior
---

<section id="listing">
        <!-- <div class="slug">
            <a href="/{{state}}">{{state}}</a>
            <a href="/{{state}}/{{city}}">{{city}}</a>
        </div> -->
        <div class="info">
                <div class="title">
                    <h1>{{title}}</h1>
                    {% for tag in tags %}
                        <a href="/{{tag}}" class="tag light rounded">{{tag}}</a>
                    {% endfor %}
                </div>

                <div class="contact">
                    <div class="container">
                        {%- if (phone) %}
                        {% include 'svg/phone.svg' %}
                        <a href="tel:{{phone}}">{{phone}}</a>
                        {%- endif -%}
                    </div>
                    <div class="container">
                        {%- if (email) %}
                        {% include 'svg/email.svg' %}
                        <a href="mailto:{{email}}">{{email}}</a>
                        {%- endif -%}
                    </div>
                </div>

                {%- if (order) %}
                    <a href="{{order}}" class="order button primary default rounded">Order&nbsp;Now</a>
                {%- endif -%}

                {%- if (address) %}
                    <div class="location">
                        <p>{{address}}</p>
                        <p>{{city}}, {{state}} {{zip}}</p>
                    </div>
                {%- endif -%}

                <div class="social">
                    {%- if (website) %}
                        <a href="{{website}}">{% include 'svg/website.svg' %}</a>
                    {%- endif -%}

                    {%- if (facebook) %}
                        <a href="{{facebook}}">{% include 'svg/facebook.svg' %}</a>
                    {%- endif -%}

                    {%- if (instagram) %}
                        <a href="{{instagram}}">{% include 'svg/instagram.svg' %}</a>
                    {%- endif -%}

                    {%- if (yelp) %}
                        <a href="{{yelp}}">{% include 'svg/yelp.svg' %}</a>
                    {%- endif -%}
                </div>

                {%- if (desc) %}
                    <p>{{desc}}</p>
                {%- endif -%}

                <div class="hours">
                    {%- if (hours) %}
                    <a href="{{hours}}">View Availability on SFF</a>
                    {%- else -%}
                    <h2 class="mb-1">Today:</h2>
                    <button id="hours-btn"></button>
                    <div id="hours-div">
                        <div class="day"><span>Sunday:</span> {{sunday}}</div>
                        <div class="day"><span>Monday:</span> {{monday}}</div>
                        <div class="day"><span>Tuesday:</span> {{tuesday}}</div>
                        <div class="day"><span>Wednesday:</span> {{wednesday}}</div>
                        <div class="day"><span>Thursday:</span> {{thursday}}</div>
                        <div class="day"><span>Friday:</span> {{friday}}</div>
                        <div class="day"><span>Saturday:</span> {{saturday}}</div>
                    </div>
                    {%- endif -%}
                </div>

                <div class="copy">
                    <small>&copy; <span id="copyYear2"></span> {% if (tags) %}{{title}}{% endif %} | All Rights Reserved</small>
                    <p>Last updated: {{date | postDate}}</p>
                </div>
        </div>

        <div class="menu-container">
            <h1>Menu</h1>
            <div id="menu">
                {{ content | safe }}
            </div>
        </div>
</section>

<!-- *** banner *** -->
<section id="banner">
    <a class="container" href="https://amply.llc">
        <div class="content">
            <h2>Are You The Owner?</h2>
            <p>Consider a full service, personalized website for your restaurant or foodtruck so your hungry customers can easily access your menu and info.</p>
        </div>
        <div class="img">
            {% include 'svg/responsive.svg' %}
        </div>
    </a>
</section><!-- /banner -->

<script src="/assets/js/date.js"></script>
<script src="/assets/js/dropdown.js"></script>